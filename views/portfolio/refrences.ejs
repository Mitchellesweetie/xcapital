<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CV Resume Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .form-container {
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      margin: 50px auto;
      max-width: 800px;
    }
    .form-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 20px;
      color: #333;
    }
    .btn-custom {
      background-color: #007bff;
      color: #fff;
    }
    .btn-custom:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="form-container">
      <h1 class="form-title text-center">References Details</h1>
      <form id="cvForm" method="post" action="/auth/references">
        <!-- Personal Information -->
       

        <!-- Education Section -->
        <div class="mb-3">
          <label class="form-label">References</label>
          <div id="educationContainer">
            <!-- Initial Education Group -->
            <div class="card card-body mb-3">
              <div class="mb-3">
                <label for="degree1" class="form-label">Name</label>
                <input type="text" class="form-control" id="degree1" name="username" >
              </div>
              <div class="mb-3">
                <label for="institution1" class="form-label">Organisation</label>
                <input type="text" class="form-control" id="institution1" name="organisation">
              </div>
              <div class="mb-3">
                <label for="year1" class="form-label">E-mail</label>
                <input type="email" class="form-control" id="year1" name="email" >
              </div>
              <div class="mb-3">
                <label for="year1" class="form-label">Phone</label>
                <input type="number" class="form-control" id="year1" name="phone" >
              </div>
            </div>
          </div>
          <button type="button" class="btn btn-outline-primary btn-sm" id="addEducationButton">Add Another Reference</button>
        </div>

       

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="btn btn-custom">Submit</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const addEducationButton = document.getElementById('addEducationButton');
      const educationContainer = document.getElementById('educationContainer');
      let educationIndex = 1;

      addEducationButton.addEventListener('click', function () {
        educationIndex++;
        const educationGroup = document.createElement('div');
        educationGroup.classList.add('card', 'card-body', 'mb-3');
        educationGroup.innerHTML = `
          <div class="mb-3">
            <label for="degree${educationIndex}" class="form-label">Name</label>
            <input type="text" class="form-control" id="degree${educationIndex}" name="username">
          </div>
          <div class="mb-3">
            <label for="institution${educationIndex}" class="form-label">Organisation</label>
            <input type="text" class="form-control" id="institution${educationIndex}" name="organisation" >
          </div>
           <div class="mb-3">
            <label for="degree${educationIndex}" class="form-label">Email</label>
            <input type="text" class="form-control" id="degree${educationIndex}" name="email">
          </div>
          <div class="mb-3">
            <label for="year${educationIndex}" class="form-label">Phone</label>
            <input type="number" class="form-control" id="year${educationIndex}" name="phone" ">
          </div>
        `;
        educationContainer.appendChild(educationGroup);
      });
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
