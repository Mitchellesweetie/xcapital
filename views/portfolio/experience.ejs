<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CV Resume Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .form-container {
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      margin: 50px auto;
      max-width: 800px;
    }
    .form-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 20px;
      color: #333;
    }
    .btn-custom {
      background-color: #007bff;
      color: #fff;
    }
    .btn-custom:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="form-container">
      <h1 class="form-title text-center">Experience Details</h1>
      <form id="cvForm" method="post" action="/auth/experience">
        <!-- Education Section -->
        <div class="mb-3">
          <label class="form-label">Experience</label>
          <div id="educationContainer">
            <!-- Initial Education Group -->
            <div class="card card-body mb-3">
              <div class="mb-3">
                <label for="degree1" class="form-label">Position</label>
                <input type="text" class="form-control" id="degree1" name="position">
              </div>
              <div class="mb-3">
                <label for="institution1" class="form-label">Organisation</label>
                <input type="text" class="form-control" id="institution1" name="organisation" >
              </div>
              <div class="mb-3">
                <label for="year1" class="form-label">Start</label>
                <input type="date" class="form-control" id="start1" name="start">
              </div>
              <div class="mb-3">
                <label for="end1" class="form-label">End</label>
                <input type="date" class="form-control" id="end1" name="end">
              </div>
              <div class="mb-3">
                <label for="current1" class="form-label">Current</label>
                <input type="checkbox" id="current1" name="current" onchange="toggleCurrent(this)">
              </div>
            </div>
          </div>
          <button type="button" class="btn btn-outline-primary btn-sm" id="addEducationButton">Add Another Experience</button>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="btn btn-custom">Submit</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const addEducationButton = document.getElementById('addEducationButton');
      const educationContainer = document.getElementById('educationContainer');
      let educationIndex = 1;

      addEducationButton.addEventListener('click', function () {
        educationIndex++;
        const educationGroup = document.createElement('div');
        educationGroup.classList.add('card', 'card-body', 'mb-3');
        educationGroup.innerHTML = `
          <div class="mb-3">
            <label for="degree${educationIndex}" class="form-label">Degree</label>
            <input type="text" class="form-control" id="degree${educationIndex}" name="degree[]" placeholder="E.g., Bachelor of Science">
          </div>
          <div class="mb-3">
            <label for="institution${educationIndex}" class="form-label">Institution</label>
            <input type="text" class="form-control" id="institution${educationIndex}" name="institution[]" placeholder="E.g., University of XYZ">
          </div>
          <div class="mb-3">
            <label for="start${educationIndex}" class="form-label">Start</label>
            <input type="date" class="form-control" id="start${educationIndex}" name="year[]" placeholder="E.g., 2024">
          </div>
          <div class="mb-3">
            <label for="end${educationIndex}" class="form-label">End</label>
            <input type="date" class="form-control" id="end${educationIndex}" name="end[]" placeholder="E.g., 2024">
          </div>
          <div class="mb-3">
            <label for="current${educationIndex}" class="form-label">Current</label>
            <input type="checkbox" id="current${educationIndex}" name="current[]" onchange="toggleCurrent(this)">
          </div>
        `;
        educationContainer.appendChild(educationGroup);
      });
    });

    // Function to handle the logic for the "current" checkbox
    function toggleCurrent(checkbox) {
      const educationIndex = checkbox.id.replace('current', ''); // Get index from checkbox id
      const endDateInput = document.getElementById('end' + educationIndex);
      
      if (checkbox.checked) {
        // Set end date to current date and hide the input
        const currentDate = new Date().toISOString().split('T')[0]; // Get current date in YYYY-MM-DD format
        endDateInput.value = currentDate;
        endDateInput.style.display = 'none';
      } else {
        // Show end date input again
        endDateInput.style.display = 'block';
        endDateInput.value = ''; // Optionally clear the value
      }
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
