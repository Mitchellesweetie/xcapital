<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CV Resume Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .form-container {
      background: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      margin: 50px auto;
      max-width: 800px;
    }
    .form-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 20px;
      color: #333;
    }
    .btn-custom {
      background-color: #007bff;
      color: #fff;
    }
    .btn-custom:hover {
      background-color: #0056b3;
    }
    .btn-danger-custom {
      background-color: #dc3545;
      color: white;
      padding: 8px 12px;
      border-radius: 5px;
    }
    .btn-danger-custom:hover {
      background-color: #c82333;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="form-container">
      <h1 class="form-title text-center">Experience Details</h1>
      <form id="cvForm" method="post" action="/auth/experience">
        <!-- Experience Section -->
        <div class="mb-3" id="educationContainer">
          <!-- Initial Experience Group -->
          <div class="card card-body mb-3" id="experience1">
            <div class="mb-3">
              <label for="position1" class="form-label">Position</label>
              <input type="text" class="form-control" id="position1" name="position[0]" required>
            </div>
            <div class="mb-3">
              <label for="organisation1" class="form-label">Organisation</label>
              <input type="text" class="form-control" id="organisation1" name="organisation[0]" required>
            </div>
            <div class="mb-3">
              <label for="start1" class="form-label">Start</label>
              <input type="text" class="form-control datepicker" id="start1" name="start[0]" required>
            </div>
            <div class="mb-3">
              <label for="end1" class="form-label">End</label>
              <input type="text" class="form-control datepicker" id="end1" name="end[0]" required>
            </div>
            <div class="mb-3">
              <label for="current1" class="form-label">Current</label>
              <input type="checkbox" id="current1" name="current[0]" onchange="toggleCurrent(this)">
            </div>
            <div id="responsibilityContainer1">
              <button type="button" class="btn btn-outline-primary btn-sm" id="addRoleButton1" onclick="addRole(1)">Add Another Role</button>

              <div class="mb-3">
                <label for="role1" class="form-label">Role</label>
                <input type="text" class="form-control" id="role1" name="roles[0][]" required>
              </div>
            </div>
            <button type="button" class="btn btn-danger-custom btn-sm" onclick="deleteExperience(1)" style="float:right;margin-top:10px;">Delete</button>
          </div>
        </div>

        <!-- Add Another Experience Button -->
        <button type="button" class="btn btn-outline-primary btn-sm" id="addExperienceButton">Add Another Experience</button>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="btn btn-custom">Submit</button>
        </div>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.min.js"></script>
  
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const addExperienceButton = document.getElementById('addExperienceButton');
      const educationContainer = document.getElementById('educationContainer');
      let experienceIndex = 1;

      addExperienceButton.addEventListener('click', function () {
        experienceIndex++;
        const experienceGroup = document.createElement('div');
        experienceGroup.classList.add('card', 'card-body', 'mb-3');
        experienceGroup.id = `experience${experienceIndex}`;
        experienceGroup.innerHTML = `
          <div class="mb-3">
            <label for="position${experienceIndex}" class="form-label">Position</label>
            <input type="text" class="form-control" id="position${experienceIndex}" name="position[${experienceIndex}]" required>
          </div>
          <div class="mb-3">
            <label for="organisation${experienceIndex}" class="form-label">Organisation</label>
            <input type="text" class="form-control" id="organisation${experienceIndex}" name="organisation[${experienceIndex}]" required>
          </div>
          <div class="mb-3">
            <label for="start${experienceIndex}" class="form-label">Start</label>
            <input type="text" class="form-control datepicker" id="start${experienceIndex}" name="start[${experienceIndex}]" required>
          </div>
          <div class="mb-3">
            <label for="end${experienceIndex}" class="form-label">End</label>
            <input type="text" class="form-control datepicker" id="end${experienceIndex}" name="end[${experienceIndex}]" required>
          </div>
          <div class="mb-3">
            <label for="current${experienceIndex}" class="form-label">Current</label>
            <input type="checkbox" id="current${experienceIndex}" name="current[${experienceIndex}]" onchange="toggleCurrent(this)">
          </div>
          <div id="responsibilityContainer${experienceIndex}">
          <button type="button" class="btn btn-outline-primary btn-sm" id="addRoleButton${experienceIndex}" onclick="addRole(${experienceIndex})">Add Another Role</button>

            <div class="mb-3">
              <label for="role${experienceIndex}" class="form-label">Role</label>
              <input type="text" class="form-control" id="role${experienceIndex}" name="roles[${experienceIndex}][]" required>
            </div>
          </div>
          <button type="button" class="btn btn-danger-custom btn-sm" onclick="deleteExperience(${experienceIndex})" style="float:right;margin-top:10px;">Delete</button>
        `;
        educationContainer.appendChild(experienceGroup);

        // Initialize datepickers for newly added fields
        $('#start' + experienceIndex).datepicker({
          format: 'yyyy-mm-dd',
          autoclose: true
        });
        $('#end' + experienceIndex).datepicker({
          format: 'yyyy-mm-dd',
          autoclose: true
        });
      });

      // Initialize datepickers for the first experience fields
      $('#start1').datepicker({
        format: 'yyyy-mm-dd',
        autoclose: true
      });
      $('#end1').datepicker({
        format: 'yyyy-mm-dd',
        autoclose: true
      });
    });

    // Function to delete an experience section
    function deleteExperience(experienceIndex) {
      const experienceGroup = document.getElementById(`experience${experienceIndex}`);
      if (experienceGroup) {
        experienceGroup.remove(); // Remove the experience section from the DOM
      }
    }

    function toggleCurrent(checkbox) {
      const experienceIndex = checkbox.id.replace('current', ''); // Get index from checkbox id
      const endDateInput = document.getElementById('end' + experienceIndex);

      if (checkbox.checked) {
        endDateInput.value = ''; // Disable the end date field when current is checked
        endDateInput.disabled = true;
      } else {
        endDateInput.disabled = false;
      }
    }

    function addRole(experienceIndex) {
      const responsibilityContainer = document.getElementById(`responsibilityContainer${experienceIndex}`);
      const roleCount = responsibilityContainer.getElementsByTagName('input').length / 2;
      const newRoleInput = document.createElement('div');
      newRoleInput.classList.add('mb-3');
      newRoleInput.innerHTML = `
        <input type="text" class="form-control" id="role${experienceIndex}_${roleCount + 1}" name="roles[${experienceIndex}][]" required>
      `;
      responsibilityContainer.appendChild(newRoleInput);
    }
  </script>
</body>
</html>
