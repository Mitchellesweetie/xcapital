<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portfolio Template</title>
  <style>
    body {
  margin: 0;
  padding: 0;
  background-color: #f4f4f4; /* Light gray background outside the A4 page */
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

/* Container styled to fit A4 dimensions */
.container {
  width: 794px; /* A4 width */
  height: 1123px; /* A4 height */
  background-color: #ffffff; /* White paper-like background */
  border: 1px solid #ddd; /* Slight border for better appearance */
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
  border-radius: 10px; /* Rounded corners for elegance */
  padding: 30px; /* Padding inside the A4 content */
  display: flex;
  flex-direction: column;
  overflow-y: scroll
}

/* Background pattern or design */
.container::before {
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f4a261 20%, #ffe8d6 80%); /* Orange gradient */
  clip-path: polygon(0 0, 100% 0, 100% 15%, 15% 100%, 0 100%);
  border-radius: 10px;
}

/* Header styling */
.header {
  display: flex;
  align-items: center;
  border-bottom: 3px solid #f4a261;
  padding-bottom: 15px;
  margin-bottom: 20px;
}

.profile-pic {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  margin-right: 20px;
  border: 2px solid #f4a261;
}

.title h1 {
  margin: 0;
  font-size: 28px;
  color: black;
}

.title p {
  margin: 0;
  font-size: 16px;
  color: #666;
}

.summary {
  font-size: 14px;
  line-height: 1.6;
  margin-bottom: 20px;
  text-align: justify;
}

/* Content layout with two columns */
.content {
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
}

.column {
  width: 48%;
}

/* Section titles */
h2 {
  color: #f4a261;
  font-size: 18px;
  margin-bottom: 10px;
  border-bottom: 2px solid #f4a261;
  padding-bottom: 5px;
}

ul {
  padding-left: 20px;
}

ul li {
  margin-bottom: 8px;
  list-style: disc;
}

p {
  margin-bottom: 15px;
  font-size: 14px;
}

strong {
  color: #333;
}

/* Adjust page to center when printing */
@media print {
  body {
    background-color: white;
  }
  .container {
    margin: 0;
    box-shadow: none;
    border: none;
    width: auto;
    height: auto;
    page-break-inside: avoid;
  }
}
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <img src="profile.jpg" alt="Profile Picture" class="profile-pic">
      <div class="title">
        <h1><%= personal.salutation %><%= personal.fullName || 'Your Name' %></h1>
           <p>Web & Graphic Designer</p>
           <%- personal.about %>
          <a href="/download-portfolio"> <button type="button" class="btn btn-warning" style="height: 40px; width: 100px; ">Download</button></a>
     
      </div>
    </div>
    <p class="summary">
    
    </p>


    <div class="content">
      <div class="column">
       


        <h2>EDUCATION</h2>
        <% education.forEach(edu=>{ %>
          <p><strong><%= edu.degree %></strong><br></p>
          <p><%= edu.institution %></p>
          <p><%= edu.start %>-<%= edu.end %></p>
              


      <%  }) %>

        <!-- <h2>EXPERTISES</h2>
        <ul>
          <li>Public Relation</li>
          <li>Resource Management</li>
          <li>Team Leadership</li>
          <li>Social Media Marketing</li>
          <li>Online Marketing</li>
          <li>Customer Fact</li>
          <li>Solving Problem</li>
        </ul> -->

        <h2>CONTACT INFO</h2>
        <p>Phone: <strong><%- personal.number_ %></strong></p> 
        <p><%= personal.gmail %></p>

      </div>
    

      <div class="column">
        <h2>WORK EXPERIENCES</h2>
        <% experience.forEach(exp => { %>

        <p><strong><%- exp.position %></strong><br><%- exp.organisation %></p> 
        <p><%- exp.start %> to <%- exp.end %></p>
      <% }) %>
