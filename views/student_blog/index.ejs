<script>
    document.addEventListener('DOMContentLoaded', () => {
        const modalElement = document.getElementById('exampleModal');
        const modal = new bootstrap.Modal(modalElement, {
            backdrop: false // You can change this to false if you want to remove the backdrop
        });
        
        // Show modal when the link is clicked
        const showModalButton = document.querySelector('[data-bs-toggle="modal"]');
        if (showModalButton) {
            showModalButton.addEventListener('click', () => {
                modal.show();
            });
        }
    
        // Focus on the first input field when the modal is shown
        modalElement.addEventListener('shown.bs.modal', function () {
            const firstInput = modalElement.querySelector('input, textarea');
            if (firstInput) {
                firstInput.focus(); // Focus on the first input field inside the modal
            }
        });
    
        // Handle form submission using AJAX
        const form = document.getElementById('createPostForm');
        form.addEventListener('submit', async (event) => {
            event.preventDefault(); // Prevent the default form submission
            
            const formData = new FormData(form); // Collect form data
    
            try {
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData
                });
    
                const data = await response.json();
                
                if (response.ok && data.success) {
                    modal.hide(); // Close the modal upon successful post creation
                    alert('Post created successfully!');
                } else {
                    alert('Failed to create post: ' + (data.message || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error submitting the form:', error);
                alert('There was an error processing your request. Please try again.');
            }
        });
    });
    </script>
    
