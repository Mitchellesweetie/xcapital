<script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>
<script>
  let editorInstance;

  // Initialize CKEditor
  ClassicEditor
    .create(document.querySelector('#bodyTextarea'))
    .then(editor => {
      editorInstance = editor;
    })
    .catch(error => {
      console.error('CKEditor initialization error:', error);
    });

  // Add submit event listener to form
  document.getElementById('createPostForm').addEventListener('submit', (event) => {
    // Ensure CKEditor data is synced with textarea before form submission
    const editorData = editorInstance.getData();
    document.querySelector('#bodyTextarea').value = editorData;
    
    // Debugging: Check the textarea content
    console.log('Textarea content:', document.querySelector('#bodyTextarea').value);
    
    // Make sure the content is not empty
    if (document.querySelector('#bodyTextarea').value.trim() === '') {
      event.preventDefault();
      alert('Body cannot be empty!');
    } else {
      console.log('Form is ready to submit.');
    }
  });

  // Optionally reset the form on page reload
  window.onload = function() {
    document.getElementById('createPostForm').reset();
    if (editorInstance) {
      editorInstance.setData('');
    }
  };
</script>

