<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs</title>
    <script src="/ckeditor/ckeditor.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f8f9fa;
        }

        .form-container {
            width: 700px;
            padding: 20px;
            background: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        button {
            height: 40px;
            width: 100px;
        }

        /* Ensure CKEditor is not affected by Bootstrap styles */
        .ck-editor__editable {
            min-height: 500px;
        }
    </style>
</head>
<body>
    <!-- Success and Error Messages -->
    <% if (errorMessage) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong><%= errorMessage %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <% if (successMessage) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong><%= successMessage %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <!-- Form -->
    <div class="form-container">
        <h2 style="text-align: center;">Create a Post</h2>
        <form action="/api/post" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="titleInput" class="form-label">Title</label>
                <input type="text" class="form-control" id="titleInput" name="title">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Body</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="20" name="message"></textarea>
            </div>
            <div class="mb-3">
                <label for="titleInput" class="form-label">Title</label>
                <input type="file" class="form-control" id="titleInput" name="file">
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>
    </div>

    <script>
        ClassicEditor
            .create(document.querySelector('#exampleFormControlTextarea1'))
            .then(editor => {
                // Set consistent height
                editor.ui.view.editable.element.style.height = '500px';
            })
            .catch(error => {
                console.error(error);
            });
    </script>
</body>
</html>
